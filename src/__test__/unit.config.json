{
  "globals": {
    "ts-jest": {
      "tsConfigFile": "./tsconfig.json"
    }
  },
  "rootDir": "../",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testMatch": ["**/?(*.)(spec|test).ts?(x)"],
  "testPathIgnorePatterns": ["/node_modules/", "/__test__/"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
}
